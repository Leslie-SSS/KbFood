<div id="toast" class="toast"></div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
    // é…ç½®APIåœ°å€ - è‡ªåŠ¨æ£€æµ‹
    // Auto-detect API URL - use same origin if available, otherwise fallback to port 9000
    const API_BASE_URL = (window.location.port === '8200' || window.location.port === '')
        ? window.location.protocol + '//' + window.location.hostname + ':8200/api'
        : (window.location.port === '8000')
        ? window.location.protocol + '//' + window.location.hostname + ':9000/api'
        : window.location.protocol + '//' + window.location.hostname + ':9000/api';

    // çŠ¶æ€ç®¡ç†
    let currentProduct = null;
    let chartInstances = {};
    let isFilterOpen = false;

    // Debounce search
    let searchTimeout;
    function debounceSearch() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => searchProducts(), 300);
    }

    // åˆ‡æ¢ç­›é€‰é¢æ¿
    function toggleFilter() {
        const panel = document.getElementById('filterPanel');
        isFilterOpen = !isFilterOpen;
        if(isFilterOpen) panel.classList.add('open');
        else panel.classList.remove('open');
    }

    // æ˜¾ç¤ºæç¤º
    function showToast(msg) {
        const toast = document.getElementById('toast');
        toast.textContent = msg;
        toast.classList.add('show');
        setTimeout(() => toast.classList.remove('show'), 2000);
    }

    // æ ¸å¿ƒæœç´¢åŠŸèƒ½
    function searchProducts(keepScroll = false) {
        const container = document.getElementById('products-container');
        const savedScrollPosition = window.scrollY;

        if (!keepScroll) {
            container.innerHTML = '<div class="loading">åŠ è½½ä¸­...</div>';
        }

        const params = new URLSearchParams();
        const keyword = document.getElementById('keyword').value;
        const platform = document.getElementById('platform').value;
        const region = document.getElementById('region').value;
        const salesStatus = document.getElementById('salesStatus').value;
        const monitorStatus = document.getElementById('monitorStatus').value;

        if (keyword) params.append('keyword', keyword);
        if (platform) params.append('platform', platform);
        if (region) params.append('region', region);
        if (salesStatus) params.append('salesStatus', salesStatus);
        if (monitorStatus) params.append('monitorStatus', monitorStatus);
        if (document.getElementById('recentSevenDays').checked) {
            params.append('recentSevenDays', 'true');
        }

        const queryString = params.toString();
        const url = `${API_BASE_URL}/products${queryString ? '?' + queryString : ''}`;

        fetch(url)
            .then(res => res.json())
            .then(result => {
                let data = result.data || [];

                // æ’åºï¼šå·²ç›‘æ§ä¼˜å…ˆï¼Œå·®ä»·è¶Šå°è¶Šé å‰
                data.sort((a, b) => {
                    const monitorA = a.hasNotification ? 1 : 0;
                    const monitorB = b.hasNotification ? 1 : 0;

                    if (monitorA !== monitorB) {
                        return monitorB - monitorA;
                    }

                    if (monitorA === 1) {
                        const gapA = a.currentPrice - (a.targetPrice || 0);
                        const gapB = b.currentPrice - (b.targetPrice || 0);
                        return gapA - gapB;
                    }

                    return 0;
                });

                renderList(data);

                if (keepScroll) {
                    window.scrollTo(0, savedScrollPosition);
                }
            })
            .catch(err => {
                container.innerHTML = `<div class="empty-state" style="color:var(--danger)">è¯·æ±‚å¤±è´¥ï¼Œè¯·æ£€æŸ¥ç½‘ç»œ</div>`;
                console.error(err);
            });
    }

    // æ¸²æŸ“åˆ—è¡¨
    function renderList(products) {
        const container = document.getElementById('products-container');
        document.getElementById('result-count').innerText = products.length;

        // Cache products for modal access
        cacheProductData(products);

        if (products.length === 0) {
            container.innerHTML = `<div class="empty-state">æš‚æ— ç›¸å…³äº§å“</div>`;
            return;
        }

        container.innerHTML = products.map(p => {
            const discount = p.originalPrice > 0
                ? ((1 - p.currentPrice / p.originalPrice) * 10).toFixed(1)
                : '-';

            return `
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">${escapeHtml(p.title)}</div>
                        ${p.salesStatus !== 1 ? '<span class="card-badge badge-sold">å·²å”®</span>' : ''}
                    </div>

                    <div class="card-meta">
                        <span>${escapeHtml(p.platform)}</span>
                        <span>â€¢</span>
                        <span>${escapeHtml(p.region)}</span>
                        <span>â€¢</span>
                        <span>${escapeHtml(p.shopName)}</span>
                    </div>

                    <div class="price-row">
                        <span class="price-current">Â¥${p.currentPrice}</span>
                        <span class="price-original">Â¥${p.originalPrice}</span>
                        ${discount !== '-' ? `<span class="price-discount">${discount}æŠ˜</span>` : ''}
                        ${p.hasNotification ? '<span class="card-badge badge-monitor" style="margin-left:auto">ç›‘æ§ä¸­</span>' : ''}
                    </div>

                    ${p.hasNotification ? `
                        <div class="target-info" onclick="openModal('${p.activityId}', true)">
                            <span>ğŸ¯ ç›®æ ‡ä»·: Â¥${p.targetPrice}</span>
                            <span>âœ</span>
                        </div>
                    ` : ''}

                    <div class="action-row">
                        <button class="btn-sm" onclick="toggleTrend(this, '${p.activityId}')">ğŸ“‰ è¶‹åŠ¿</button>
                        ${p.hasNotification ?
                            `<button class="btn-sm" style="color:var(--text-sub)" onclick="deleteNotification('${p.activityId}')">å–æ¶ˆç›‘æ§</button>` :
                            `<button class="btn-sm primary" onclick="openModalById('${p.activityId}')">ğŸ”” æé†’</button>`
                        }
                        <button class="btn-sm" style="color:var(--text-sub)" onclick="blockProduct('${p.activityId}')">ğŸš« å±è”½</button>
                    </div>

                    <div id="chart-${p.activityId}" class="chart-wrapper">
                        <canvas id="canvas-${p.activityId}"></canvas>
                    </div>
                </div>`;
        }).join('');
    }

    // HTMLè½¬ä¹‰
    function escapeHtml(text) {
        if (!text) return '';
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // è¶‹åŠ¿å›¾è¡¨
    function toggleTrend(btn, activityId) {
        const wrapper = document.getElementById(`chart-${activityId}`);
        const isShowing = wrapper.classList.contains('show');

        document.querySelectorAll('.chart-wrapper.show').forEach(el => {
            if(el.id !== `chart-${activityId}`) el.classList.remove('show');
        });

        if (isShowing) {
            wrapper.classList.remove('show');
            btn.classList.remove('primary');
        } else {
            wrapper.classList.add('show');
            btn.classList.add('primary');
            loadTrendData(activityId);
        }
    }

    function loadTrendData(activityId) {
        if (chartInstances[activityId]) return;

        fetch(`${API_BASE_URL}/products/${activityId}/trend`)
            .then(res => res.json())
            .then(res => {
                const data = res.data || [];
                if (data.length === 0) {
                    document.getElementById(`chart-${activityId}`).innerHTML = '<div style="text-align:center;padding:20px;color:#999">æš‚æ— è¶‹åŠ¿æ•°æ®</div>';
                    return;
                }

                const ctx = document.getElementById(`canvas-${activityId}`).getContext('2d');
                const prices = data.map(d => d.price);
                const dates = data.map(d => d.date.substring(5));

                chartInstances[activityId] = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: dates,
                        datasets: [{
                            label: 'ä»·æ ¼',
                            data: prices,
                            borderColor: '#2563eb',
                            borderWidth: 2,
                            pointRadius: 3,
                            tension: 0.3,
                            fill: false
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: { beginAtZero: false, grid: { color: '#f1f5f9' } },
                            x: { grid: { display: false } }
                        }
                    }
                });
            })
            .catch(err => {
                document.getElementById(`chart-${activityId}`).innerHTML = '<div style="text-align:center;padding:20px;color:#999">åŠ è½½å¤±è´¥</div>';
            });
    }

    // ä¿å­˜äº§å“æ•°æ®ç”¨äºæ¨¡æ€æ¡†
    const productsCache = {};

    function cacheProductData(products) {
        products.forEach(p => {
            productsCache[p.activityId] = p;
        });
    }

    // æ¨¡æ€æ¡†é€»è¾‘
    function openModalById(activityId) {
        const product = productsCache[activityId];
        if (product) {
            openModalWithProduct(product, false);
        }
    }

    function openModal(activityId, isEdit) {
        const product = productsCache[activityId];
        if (product) {
            openModalWithProduct(product, isEdit);
        }
    }

    function openModalWithProduct(product, isEdit) {
        currentProduct = product;
        currentProduct.isEdit = isEdit;
        document.getElementById('modalProductTitle').value = product.title;
        document.getElementById('modalTargetPrice').value = isEdit ? (product.targetPrice || '') : '';
        document.getElementById('notificationModal').classList.add('show');
        setTimeout(() => document.getElementById('modalTargetPrice').focus(), 100);
    }

    function closeModal() {
        document.getElementById('notificationModal').classList.remove('show');
        currentProduct = null;
    }

    function saveNotification() {
        const price = parseFloat(document.getElementById('modalTargetPrice').value);
        if (!price || price <= 0) {
            showToast('è¯·è¾“å…¥æœ‰æ•ˆçš„ç›®æ ‡ä»·æ ¼');
            return;
        }

        const url = currentProduct.isEdit
            ? `${API_BASE_URL}/products/notifications/${currentProduct.activityId}`
            : `${API_BASE_URL}/products/notifications`;

        const method = currentProduct.isEdit ? 'PUT' : 'POST';

        fetch(url, {
            method: method,
