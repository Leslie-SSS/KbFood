            gap: 10px;
            padding: 12px 16px;
        }

        @media (min-width: 768px) {
            .filter-grid { grid-template-columns: repeat(5, 1fr); }
            .container { max-width: 1200px; margin: 0 auto; }
        }

        select, .checkbox-wrapper {
            width: 100%;
            padding: 8px;
            border: 1px solid var(--border);
            border-radius: 6px;
            background: #fff;
            font-size: 13px;
            color: var(--text-main);
        }

        /* äº§å“åˆ—è¡¨ */
        .container { padding: 12px; }
        .product-grid {
            display: grid;
            grid-template-columns: 1fr;
            gap: 12px;
        }
        @media (min-width: 640px) { .product-grid { grid-template-columns: repeat(2, 1fr); } }
        @media (min-width: 1024px) { .product-grid { grid-template-columns: repeat(3, 1fr); } }

        /* ç´§å‡‘å¡ç‰‡è®¾è®¡ */
        .card {
            background: var(--bg-card);
            border-radius: var(--radius);
            padding: 12px;
            border: 1px solid var(--border);
            box-shadow: 0 1px 2px rgba(0,0,0,0.03);
            display: flex;
            flex-direction: column;
            gap: 8px;
            position: relative;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 8px;
        }

        .card-title {
            font-size: 15px;
            font-weight: 600;
            line-height: 1.4;
            color: var(--text-main);
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .card-badge {
            font-size: 10px;
            padding: 2px 6px;
            border-radius: 4px;
            white-space: nowrap;
            background: #f1f5f9;
            color: var(--text-sub);
        }
        .badge-monitor { background: #eff6ff; color: var(--primary); }
        .badge-sold { background: #fef2f2; color: var(--danger); }

        .card-meta {
            display: flex;
            gap: 8px;
            font-size: 12px;
            color: var(--text-sub);
            align-items: center;
        }

        .price-row {
            display: flex;
            align-items: baseline;
            gap: 6px;
            margin-top: 4px;
        }

        .price-current { font-size: 20px; font-weight: 700; color: var(--danger); }
        .price-original { font-size: 12px; text-decoration: line-through; color: #94a3b8; }
        .price-discount { font-size: 12px; color: var(--success); font-weight: 500; }

        .target-info {
            font-size: 12px;
            background: #fff7ed;
            color: #c2410c;
            padding: 4px 8px;
            border-radius: 4px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .action-row {
            display: flex;
            gap: 8px;
            margin-top: 4px;
        }

        .btn-sm {
            flex: 1;
            padding: 6px;
            font-size: 12px;
            border-radius: 4px;
            border: 1px solid var(--border);
            background: white;
            color: var(--text-main);
            cursor: pointer;
            text-align: center;
        }
        .btn-sm.primary { border-color: var(--primary); color: var(--primary); }
        .btn-sm.danger { border-color: var(--danger); color: var(--danger); }

        /* å›¾è¡¨å®¹å™¨ */
        .chart-wrapper {
            margin-top: 10px;
            height: 200px;
            display: none;
        }
        .chart-wrapper.show { display: block; }

        /* å¼¹çª—æ ·å¼ */
        .modal-overlay {
            position: fixed; inset: 0; background: rgba(0,0,0,0.5);
            display: none; align-items: center; justify-content: center; z-index: 999;
            backdrop-filter: blur(2px);
        }
        .modal-overlay.show { display: flex; }

        .modal-box {
            background: white; width: 85%; max-width: 400px;
            border-radius: 12px; padding: 20px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            display: flex; flex-direction: column;
        }

        .modal-box-large {
            max-width: 600px; height: 80vh;
        }

        .modal-title { font-size: 18px; font-weight: 600; margin-bottom: 16px; }
        .form-item { margin-bottom: 16px; }
        .form-item label { display: block; font-size: 12px; color: var(--text-sub); margin-bottom: 6px; }
        .form-input { width: 100%; padding: 10px; border: 1px solid var(--border); border-radius: 6px; font-size: 16px; }

        .modal-actions { display: flex; gap: 10px; margin-top: 20px; }
        .modal-btn { flex: 1; padding: 10px; border-radius: 6px; border: none; font-size: 14px; cursor: pointer; }
        .btn-cancel { background: #f1f5f9; color: var(--text-main); }

        /* å±è”½åˆ—è¡¨æ ·å¼ */
        .blocked-list-container {
            flex: 1; overflow-y: auto;
            border-top: 1px solid var(--border);
            border-bottom: 1px solid var(--border);
            margin: 0 -20px 20px -20px;
            padding: 10px 20px;
        }

        .empty-state {
            text-align: center; padding: 40px; color: var(--text-sub); grid-column: 1/-1;
        }
        .loading { text-align: center; padding: 20px; color: var(--text-sub); width: 100%; }

        /* Toast æç¤º */
        .toast {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0,0,0,0.8);
            color: white;
            padding: 12px 24px;
            border-radius: 8px;
            z-index: 9999;
            display: none;
        }
        .toast.show { display: block; }

    </style>
</head>
<body>

<nav class="navbar">
