# Food 价格监控系统 - 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ============================================
# Server Configuration
# ============================================
FOOD_SERVER_PORT=8080
FOOD_SERVER_READ_TIMEOUT=30s
FOOD_SERVER_WRITE_TIMEOUT=30s
FOOD_SERVER_SHUTDOWN_TIMEOUT=30s

# ============================================
# Database Configuration
# ============================================
FOOD_DB_HOST=localhost
FOOD_DB_PORT=5432
FOOD_DB_USER=food
FOOD_DB_PASSWORD=your_password_here
FOOD_DB_NAME=food
FOOD_DB_MAX_CONNS=20
FOOD_DB_MIN_CONNS=5
FOOD_DB_MAX_LIFETIME=1h
FOOD_DB_MAX_IDLE_TIME=30m
FOOD_DB_CONNECT_TIMEOUT=10s

# ============================================
# Platform Configuration - TanTanTang
# ============================================
FOOD_PLATFORM_TANTANTANG_TOKEN=your_tantantang_token_here
FOOD_PLATFORM_TANTANTANG_SECRET_KEY=your_secret_key_here
FOOD_PLATFORM_TANTANTANG_BASE_URL=https://ttt.bjlxkjyxgs.cn/api/shop/activity

# ============================================
# Platform Configuration - DT
# ============================================
FOOD_PLATFORM_DT_TOKEN=your_dt_token_here

# ============================================
# Platform Configuration - XiaoCan
# ============================================
FOOD_PLATFORM_XIAOCAN_X_VAYNE=your_x_vayne_here
FOOD_PLATFORM_XIAOCAN_X_TEEMO=your_x_teemo_here
FOOD_PLATFORM_XIAOCAN_X_ASHE=your_x_ashe_here
FOOD_PLATFORM_XIAOCAN_X_NAMI=your_x_nami_here
FOOD_PLATFORM_XIAOCAN_X_SIVIR=your_x_sivir_here
FOOD_PLATFORM_XIAOCAN_USER_ID=your_user_id_here
FOOD_PLATFORM_XIAOCAN_SILK_ID=your_silk_id_here

# ============================================
# Bark Notification
# ============================================
FOOD_BARK_URL=https://api.day.app/your_device_key

# ============================================
# Logging Configuration
# ============================================
FOOD_LOG_LEVEL=info
FOOD_LOG_FORMAT=json
